<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>netcoreapp3.0</TargetFramework>
        <AssemblyName>HtcSharp.HttpModule.plugin</AssemblyName>
	      <AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>
        <CopyLocalLockFileAssemblies>true</CopyLocalLockFileAssemblies>
        <RootNamespace>HtcSharp.HttpModule</RootNamespace>
    </PropertyGroup>

    <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
      <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    </PropertyGroup>

    <ItemGroup>
      <Folder Include="Core\Http\Http2\" />
      <Folder Include="Core\Features\" />
    </ItemGroup>

    <ItemGroup>
      <PackageReference Include="System.IO.Pipelines" Version="4.5.2" />
    </ItemGroup>

    <ItemGroup>
      <Compile Update="CoreStrings.Designer.cs">
        <DesignTime>True</DesignTime>
        <AutoGen>True</AutoGen>
        <DependentUpon>CoreStrings.resx</DependentUpon>
      </Compile>
    </ItemGroup>

    <ItemGroup>
      <EmbeddedResource Update="CoreStrings.resx">
        <Generator>ResXFileCodeGenerator</Generator>
        <LastGenOutput>CoreStrings.Designer.cs</LastGenOutput>
      </EmbeddedResource>
    </ItemGroup>
	
    <Target Name="PostBuild" AfterTargets="PostBuildEvent">
      <Exec Command="dotnet $(SolutionDir)LuaBuildEvents/LuaBuildEvents.dll BuildEvents.lua $(ConfigurationName) $(SolutionDir) $(TargetPath) $(TargetFileName)" />
    </Target>

</Project>
